<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/thankyou"
    android:background="@color/semi_transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="8dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:text="Thanh toán thành công">
        </TextView>

        <ImageView
        android:id="@+id/thank_you_image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/thank_you" />

        <TextView
        android:id="@+id/thank_you_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã sử dụng dịch vụ!"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:gravity="center" />

        <TextView
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
            android:background="@color/blue_bg"
            android:padding="10dp"
        android:layout_height="40dp"
            android:layout_gravity="center"
        android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
        android:text="Tiếp tục sử dụng ứng dụng" />
    </LinearLayout>

</FrameLayout>
